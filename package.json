{
  "name": "generic-sensors-adapter",
  "display_name": "Generic Sensors",
  "version": "0.0.8",
  "description": "Generic I2C Sensors for Mozilla WebThings Gateway",
  "author": "Philippe Coval",
  "main": "index.js",
  "scripts": {
    "lint": "eslint --fix . || eslint .",
    "test": "eslint ."
  },
  "keywords": [
    "mozilla",
    "iot",
    "adapter",
    "i2c",
    "sensors"
  ],
  "license": "MPL-2.0",
  "homepage": "https://github.com/rzr/mozilla-iot-generic-sensors-adapter",
  "repository": {
    "type": "git",
    "url": "https://github.com/rzr/mozilla-iot-generic-sensors-adapter.git"
  },
  "bugs": {
    "url": "https://github.com/rzr/mozilla-iot-generic-sensors-adapter/issues"
  },
  "files": [
    "LICENSE",
    "SHA256SUMS",
    "generic-sensors-adapter.js",
    "index.js",
    "node_modules"
  ],
  "dependencies": {
    "generic-sensors-lite": "0.0.10"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.2",
    "eslint": "^6.0.1"
  },
  "bundledDependencies": [
    "generic-sensors-lite"
  ],
  "moziot": {
    "api": {
      "min": 2,
      "max": 2
    },
    "plugin": true,
    "exec": "{nodeLoader} {path}",
    "config": {
      "generic-sensors": [
        {
          "type": "multiLevelSensor",
          "sensorType": "ambientLightSensor",
          "sensorController": "bh1750",
          "name": "Ambient Light Sensor"
        },
        {
          "type": "customSensor",
          "sensorType": "colorSensor",
          "sensorController": "tcs34725",
          "name": "Color Sensor"
        },
        {
          "type": "multiLevelSensor",
          "sensorType": "temperatureSensor",
          "sensorController": "bmp085",
          "name": "Temperature Sensor"
        }
      ]
    },
    "schema": {
      "type": "object",
      "properties": {
        "generic-sensors": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "type",
              "sensorType",
              "name"
            ],
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "multiLevelSensor",
                  "customSensor"
                ]
              },
              "sensorType": {
                "type": "string",
                "enum": [
                  "ambientLightSensor",
                  "colorSensor",
                  "temperatureSensor"
                ]
              },
              "sensorController": {
                "type": "string"
              },
              "name": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}
