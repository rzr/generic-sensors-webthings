{
  "name": "generic-sensors-adapter",
  "display_name": "Generic Sensors",
  "version": "0.0.7",
  "description": "Generic Sensors for Mozilla IoT Gateway",
  "author": "Philippe Coval",
  "main": "index.js",
  "scripts": {
    "test": "eslint ."
  },
  "keywords": [
    "mozilla",
    "iot",
    "adapter",
    "i2c",
    "sensors"
  ],
  "license": "MPL-2.0",
  "homepage": "https://github.com/rzr/mozilla-iot-generic-sensors-adapter",
  "repository": {
    "type": "git",
    "url": "https://github.com/rzr/mozilla-iot-generic-sensors-adapter.git"
  },
  "bugs": {
    "url": "https://github.com/rzr/mozilla-iot-generic-sensors-adapter/issues"
  },
  "files": [
    "LICENSE",
    "SHA256SUMS",
    "generic-sensors-adapter.js",
    "index.js",
    "node_modules"
  ],
  "dependencies": {
    "generic-sensors-lite": "0.0.7"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.15.3"
  },
  "bundledDependencies": [
    "generic-sensors-lite"
  ],
  "moziot": {
    "api": {
      "min": 2,
      "max": 2
    },
    "plugin": true,
    "exec": "{nodeLoader} {path}",
    "config": {
      "generic-sensors": [
        {
          "type": "multiLevelSensor",
          "sensorType": "ambientLightSensor",
          "sensorController": "bh1750",
          "name": "Ambient Light Sensor",
          "properties": [
            {
              "name": "level",
              "metadata": {
                "readOnly": true,
                "type": "number",
                "value": 0
              }
            },
            {
              "name": "on",
              "metadata": {
                "type": "boolean",
                "value": false
              }
            }
          ]
        },
        {
          "type": "customSensor",
          "sensorType": "colorSensor",
          "sensorController": "tcs34725",
          "name": "Color Sensor",
          "properties": [
            {
              "name": "color",
              "metadata": {
                "readOnly": true,
                "type": "string",
                "value": "#000000"
              }
            },
            {
              "name": "on",
              "metadata": {
                "type": "boolean",
                "value": false
              }
            }
          ]
        },
        {
          "type": "multiLevelSensor",
          "sensorType": "temperatureSensor",
          "sensorController": "bmp085",
          "name": "Temperature Sensor",
          "properties": [
            {
              "name": "level",
              "metadata": {
                "readOnly": true,
                "type": "number",
                "value": 0
              }
            },
            {
              "name": "on",
              "metadata": {
                "type": "boolean",
                "value": false
              }
            }
          ]
        }
      ]
    },
    "schema": {
      "type": "object",
      "properties": {
        "generic-sensors": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "type",
              "sensorType",
              "name"
            ],
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "multiLevelSensor",
                  "customSensor"
                ]
              },
              "sensorType": {
                "type": "string",
                "enum": [
                  "ambientLightSensor",
                  "colorSensor",
                  "temperatureSensor"
                ]
              },
              "sensorController": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "properties": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": [
                    "name",
                    "metadata"
                  ],
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "metadata": {
                      "type": "object",
                      "required": [
                        "type"
                      ],
                      "properties": {
                        "type": {
                          "type": "string"
                        },
                        "unit": {
                          "type": "string"
                        },
                        "description": {
                          "type": "string"
                        },
                        "minimum": {
                          "type": "integer"
                        },
                        "maximum": {
                          "type": "integer"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
